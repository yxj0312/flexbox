*
	margin 0
	padding 0
body,html
	height 100%
	font-family sans-serif

body
	display flex
	align-items center
	justify-content center

.episode-list
	max-width 300px

.episode-list__item
	display flex
	border-bottom 1px dashed #cecece
	padding: 20px 0
	justify-content space-between
	align-items column
	
.episode-list__title
	margin-right auto
	white-space nowrap
	padding 0 1em
	
	a 
		color: inherit
		text-decoration none
		&:hover
			text-decoration underline