body
	display flex
	max-width 500px
	margin:auto
	align-items: center
	justify-content center

.media
	display flex
	width 100%
	
.media--box
	border 1px solid #cecece
	padding 20px
		

.media__left
	margin-right 1em

.media__content
	flex:1
	p
		width 100%
	textarea
		width 100%
		min-height 100px
		border-color #cecece
	form
		display flex
		flex-direction column
		
.media__buttons
	align-self: flex-end
	